{
  "openapi": "3.0.0",
  "info": {
    "title": "Cricket Box Tournament API",
    "version": "1.0.0",
    "description": "Complete API documentation for Cricket Box - A cricket tournament management system with real-time match tracking, room management, and user statistics.",
    "contact": {
      "name": "Cricket Box Support",
      "email": "support@cricketbox.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Development server"
    },
    {
      "url": "https://api.cricketbox.com",
      "description": "Production server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Enter your JWT token in the format: Bearer {token}"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "507f1f77bcf86cd799439011"
          },
          "username": {
            "type": "string",
            "example": "john_doe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "john@example.com"
          },
          "city": {
            "type": "string",
            "example": "Mumbai"
          },
          "role": {
            "type": "string",
            "enum": ["player", "admin", "umpire"],
            "example": "player"
          },
          "stats": {
            "type": "object",
            "properties": {
              "localMatches": {
                "type": "object",
                "properties": {
                  "matchesPlayed": { "type": "number", "example": 10 }
                }
              },
              "tournamentMatches": {
                "type": "object",
                "properties": {
                  "matchesPlayed": { "type": "number", "example": 5 }
                }
              }
            }
          },
          "totalStats": {
            "type": "object",
            "properties": {
              "matchesPlayed": { "type": "number", "example": 15 },
              "runs": { "type": "number", "example": 450 },
              "wickets": { "type": "number", "example": 12 }
            }
          }
        }
      },
      "Room": {
        "type": "object",
        "properties": {
          "roomId": {
            "type": "string",
            "example": "ROOM123"
          },
          "teamA": {
            "type": "object",
            "properties": {
              "teamName": { "type": "string", "example": "Mumbai Indians" },
              "players": {
                "type": "array",
                "items": { "type": "string" },
                "example": ["player1", "player2"]
              }
            }
          },
          "teamB": {
            "type": "object",
            "properties": {
              "teamName": { "type": "string", "example": "Chennai Super Kings" },
              "players": {
                "type": "array",
                "items": { "type": "string" },
                "example": ["player3", "player4"]
              }
            }
          },
          "umpire": {
            "type": "string",
            "example": "umpire_username"
          },
          "status": {
            "type": "string",
            "enum": ["waiting", "ongoing", "completed"],
            "example": "waiting"
          },
          "matchId": {
            "type": "string",
            "example": "507f1f77bcf86cd799439011"
          }
        }
      },
      "Match": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "507f1f77bcf86cd799439011"
          },
          "roomId": {
            "type": "string",
            "example": "ROOM123"
          },
          "umpire": {
            "type": "string",
            "example": "umpire_username"
          },
          "teamA": {
            "type": "object",
            "properties": {
              "name": { "type": "string", "example": "Mumbai Indians" },
              "players": {
                "type": "array",
                "items": { "type": "string" }
              },
              "runs": { "type": "number", "example": 165 },
              "wickets": { "type": "number", "example": 7 },
              "overs": { "type": "number", "example": 20 },
              "events": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "over": { "type": "number", "example": 1.3 },
                    "run": { "type": "number", "example": 4 },
                    "extras": { "type": "number", "example": 0 },
                    "wicket": { "type": "boolean", "example": false }
                  }
                }
              }
            }
          },
          "teamB": {
            "type": "object",
            "properties": {
              "name": { "type": "string", "example": "Chennai Super Kings" },
              "players": {
                "type": "array",
                "items": { "type": "string" }
              },
              "runs": { "type": "number", "example": 150 },
              "wickets": { "type": "number", "example": 9 },
              "overs": { "type": "number", "example": 20 },
              "events": {
                "type": "array",
                "items": { "type": "object" }
              }
            }
          },
          "status": {
            "type": "string",
            "enum": ["live", "completed"],
            "example": "live"
          },
          "winner": {
            "type": "string",
            "example": "teamA"
          },
          "resultSummary": {
            "type": "string",
            "example": "Mumbai Indians won by 15 runs"
          },
          "startedAt": {
            "type": "string",
            "format": "date-time"
          },
          "endedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Error message"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "object"
            }
          }
        }
      }
    }
  },
  "paths": {
    "/api/auth/signup": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Register a new user",
        "description": "Create a new user account with username, password, and optional email and city. A welcome email will be sent if email is provided.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                  "username": {
                    "type": "string",
                    "minLength": 1,
                    "example": "john_doe"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 6,
                    "example": "password123"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "john@example.com"
                  },
                  "city": {
                    "type": "string",
                    "example": "Mumbai"
                  },
                  "role": {
                    "type": "string",
                    "enum": ["player", "admin", "umpire"],
                    "example": "player"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User created"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "string" },
                        "username": { "type": "string" },
                        "role": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error or username already exists",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Login user",
        "description": "Authenticate user and receive JWT token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "john_doe"
                  },
                  "password": {
                    "type": "string",
                    "example": "password123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Login successful"
                    },
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "string" },
                        "username": { "type": "string" },
                        "role": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "401": {
            "description": "Invalid credentials",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/users/me": {
      "get": {
        "tags": ["Users"],
        "summary": "Get current user profile",
        "description": "Retrieve the authenticated user's profile information",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "User profile retrieved successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/User" }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing token",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/users": {
      "get": {
        "tags": ["Users"],
        "summary": "Get all users (Admin only)",
        "description": "Retrieve a list of all registered users. Requires admin role.",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of all users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/User" }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing token",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "403": {
            "description": "Forbidden - Admin access required",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/room": {
      "post": {
        "tags": ["Rooms"],
        "summary": "Create a new room",
        "description": "Create a new cricket match room with two teams",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "roomId": {
                    "type": "string",
                    "example": "ROOM123"
                  },
                  "teamA": {
                    "type": "object",
                    "properties": {
                      "teamName": { "type": "string", "example": "Mumbai Indians" },
                      "players": {
                        "type": "array",
                        "items": { "type": "string" },
                        "example": ["player1", "player2"]
                      }
                    }
                  },
                  "teamB": {
                    "type": "object",
                    "properties": {
                      "teamName": { "type": "string", "example": "Chennai Super Kings" },
                      "players": {
                        "type": "array",
                        "items": { "type": "string" },
                        "example": ["player3", "player4"]
                      }
                    }
                  },
                  "umpire": {
                    "type": "string",
                    "example": "umpire_username"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Room created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Room created" },
                    "room": { "$ref": "#/components/schemas/Room" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/match/start": {
      "post": {
        "tags": ["Matches"],
        "summary": "Start match from room",
        "description": "Initialize a live match from an existing room. Creates a match document and updates room status to 'ongoing'.",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["roomId"],
                "properties": {
                  "roomId": {
                    "type": "string",
                    "example": "ROOM123",
                    "description": "The ID of the room to start the match from"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Match started successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Match started"
                    },
                    "match": { "$ref": "#/components/schemas/Match" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Room ID required or live match already exists",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" },
                "examples": {
                  "missingRoomId": {
                    "value": { "message": "roomId required" }
                  },
                  "liveMatchExists": {
                    "value": { "message": "A live match already exists for this room" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "404": {
            "description": "Room not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/match/{matchId}/event": {
      "post": {
        "tags": ["Matches"],
        "summary": "Add ball event to match",
        "description": "Record a ball-by-ball event during a live match. Updates runs, wickets, and overs automatically.",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "matchId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the live match",
            "example": "507f1f77bcf86cd799439011"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["innings", "event"],
                "properties": {
                  "innings": {
                    "type": "string",
                    "enum": ["teamA", "teamB"],
                    "example": "teamA",
                    "description": "Which team is currently batting"
                  },
                  "event": {
                    "type": "object",
                    "required": ["over"],
                    "properties": {
                      "over": {
                        "type": "number",
                        "example": 1.3,
                        "description": "Over number (e.g., 1.3 means 1st over, 4th ball)"
                      },
                      "run": {
                        "type": "number",
                        "example": 4,
                        "description": "Runs scored on this ball"
                      },
                      "extras": {
                        "type": "number",
                        "example": 0,
                        "description": "Extra runs (wides, no-balls, etc.)"
                      },
                      "wicket": {
                        "type": "boolean",
                        "example": false,
                        "description": "Whether a wicket fell on this ball"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Event added successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Event added"
                    },
                    "match": { "$ref": "#/components/schemas/Match" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error or match not live",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" },
                "examples": {
                  "missingFields": {
                    "value": { "message": "matchId, innings and event required" }
                  },
                  "invalidInnings": {
                    "value": { "message": "innings must be 'teamA' or 'teamB'" }
                  },
                  "matchNotLive": {
                    "value": { "message": "Match is not live" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "404": {
            "description": "Match not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/match/{matchId}/end": {
      "post": {
        "tags": ["Matches"],
        "summary": "End match and update stats",
        "description": "Complete a match, declare winner, and update player statistics. Updates both tournament and local match stats for all players.",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "matchId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the match to end",
            "example": "507f1f77bcf86cd799439011"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "winner": {
                    "type": "string",
                    "enum": ["teamA", "teamB"],
                    "example": "teamA",
                    "description": "The winning team"
                  },
                  "resultSummary": {
                    "type": "string",
                    "example": "Mumbai Indians won by 15 runs",
                    "description": "Human-readable match result"
                  },
                  "isTournament": {
                    "type": "boolean",
                    "example": true,
                    "description": "Whether this is a tournament match (affects stats tracking)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Match ended and stats updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Match ended and stats updated"
                    },
                    "match": { "$ref": "#/components/schemas/Match" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "404": {
            "description": "Match not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Authentication",
      "description": "User registration and login endpoints"
    },
    {
      "name": "Users",
      "description": "User profile and management endpoints"
    },
    {
      "name": "Rooms",
      "description": "Match room creation and management"
    },
    {
      "name": "Matches",
      "description": "Live match tracking and ball-by-ball commentary"
    }
  ]
}